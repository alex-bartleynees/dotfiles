{
  "layer": "top", // Waybar at top layer
  "position": "top", // Waybar position (top|bottom|left|right)
  "modules-left": ["clock"],
  "modules-center": ["sway/workspaces"],
  "modules-right": [
    "custom/cpugovernor",
    "cpu",
    "battery",
    "temperature",
    "custom/gpu",
    "pulseaudio",
    "network",
    "tray"
  ],
  // Modules configuration
  "sway/mode": {
    "format": "<span style=\"italic\">{}</span>"
  },
  "sway/window": {
    "format": "{}",
    "max-length": 50,
    "tooltip": false
  },
  "battery": {
    "format": "{capacity}% {icon} ",
    "format-icons": ["ï‰„", "ï‰ƒ", "ï‰‚", "ï‰", "ï‰€"]
  },
  "tray": {
    //"icon-size": 11,
    "spacing": 5
  },
  "clock": {
    "format": "ï€—  {:%H:%M  ï³ %e %b}",
    "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>",
    "today-format": "<b>{}</b>",
    "on-click": "gnome-calendar"
  },
  "cpu": {
    "interval": "1",
    "format": "î€  {max_frequency}GHz <span color=\"darkgray\">| {usage}%</span>",
    "max-length": 13,
    "min-length": 13,
    "on-click": "kitty -e htop --sort-key PERCENT_CPU",
    "tooltip": false
  },
  "temperature": {
    //"thermal-zone": 1,
    "interval": "4",
    "hwmon-path": "/sys/class/hwmon/hwmon3/temp1_input",
    "critical-threshold": 74,
    "format-critical": "ï±  {temperatureC}Â°C",
    "format": "{icon}  {temperatureC}Â°C",
    "format-icons": ["ï«", "ï‹‰", "ï©"],
    "max-length": 7,
    "min-length": 7
  },
  "network": {
    // "interface": "wlan0", // (Optional) To force the use of this interface,
    "format-wifi": "ï‡«    {essid}",
    "format-ethernet": "{ifname}: {ipaddr}/{cidr} ï–",
    "format-linked": "{ifname} (No IP) ï–",
    "format-disconnected": "ïš”",
    "format-alt": "{ifname}: {ipaddr}/{cidr}",
    "family": "ipv4",
    "tooltip-format-wifi": "ï‡«  {ifname} @ {essid}\nIP: {ipaddr}\nStrength: {signalStrength}%\nFreq: {frequency}MHz\nï— {bandwidthUpBits} ï” {bandwidthDownBits}",
    "tooltip-format-ethernet": "ï– {ifname}\nIP: {ipaddr}\nï— {bandwidthUpBits} ï” {bandwidthDownBits}"
  },
  "pulseaudio": {
    "format": "{icon}    {volume:2}%",
    "format-bluetooth": "{icon}  {volume}%ïŠ”",
    "format-muted": "MUTE",
    "format-icons": {
      "headphones": "ï€¥",
      "default": ["ï€§", "ï€¨"]
    },
    "scroll-step": 5
  },
  "custom/pacman": {
    "format": "<big>ô†²</big>  {}",
    "interval": 3600, // every hour
    "exec": "checkupdates | wc -l", // # of updates
    "exec-if": "exit 0", // always run; consider advanced run conditions
    "on-click": "kitty -e 'yay'; pkill -SIGRTMIN+8 waybar", // update system
    "signal": 8,
    "max-length": 5,
    "min-length": 3
  },
  "custom/weather": {
    "exec": "curl 'https://wttr.in/?format=1'",
    "interval": 3600
  },
  "custom/gpu": {
    "exec": "$HOME/.config/waybar/custom_modules/custom-gpu.sh",
    "return-type": "json",
    "format": " ï›˜ {}",
    "interval": 2,
    "tooltip": "{tooltip}",
    "max-length": 19,
    "min-length": 19,
    "on-click": "powerupp"
  },
  "custom/cpugovernor": {
    "format": "{icon}",
    "interval": "30",
    "return-type": "json",
    "exec": "$HOME/.config/waybar/custom_modules/cpugovernor.sh",
    "min-length": 2,
    "max-length": 2,
    "format-icons": {
      "perf": "ïœ¤",
      "sched": "ï’¿"
    }
  },
  "custom/media": {
    "format": "{icon} {}",
    "return-type": "json",
    "max-length": 40,
    "format-icons": {
      "spotify": "ï†¼",
      "default": "ğŸœ"
    },
    "escape": true,
    "exec": "$HOME/.config/waybar/mediaplayer.py 2> /dev/null" // Script in resources folder
    // "exec": "$HOME/.config/waybar/mediaplayer.py --player spotify 2> /dev/null" // Filter player based on name
  },
  "custom/scratchpad-indicator": {
    "interval": 3,
    "return-type": "json",
    "exec": "swaymsg -t get_tree | jq --unbuffered --compact-output '( select(.name == \"root\") | .nodes[] | select(.name == \"__i3\") | .nodes[] | select(.name == \"__i3_scratch\") | .focus) as $scratch_ids | [..  | (.nodes? + .floating_nodes?) // empty | .[] | select(.id |IN($scratch_ids[]))] as $scratch_nodes | { text: \"\\($scratch_nodes | length)\", tooltip: $scratch_nodes | map(\"\\(.app_id // .window_properties.class) (\\(.id)): \\(.name)\") | join(\"\\n\") }'",
    "format": "{} ô œ",
    "on-click": "exec swaymsg 'scratchpad show'",
    "on-click-right": "exec swaymsg 'move scratchpad'"
  }
}
