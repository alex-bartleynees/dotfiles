configuration{
    modi: "run,window,combi,drun";
    icon-theme: "Adwaita";
    fallback-icon: "application-x-executable";
    cycle: true;
    filter: "";
    normalize-match: true;
    show-icons: true;
    terminal: "ghostty";
    drun-display-format: "{icon} {name}";
    location: 0;
    disable-history: false;
    hide-scrollbar: true;
    display-combi: " 🖥️  All ";
    display-run: " 🏃  Run ";
    display-window: " 🪟  Window";
    sidebar-mode: true;
}

@theme "colors/catppuccin-mocha"
